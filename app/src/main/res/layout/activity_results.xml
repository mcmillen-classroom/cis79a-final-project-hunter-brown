<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultsActivity"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:layout_gravity="center|top"
   >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="@string/Results_title"
        android:fontFamily="@font/press_start_2p"
        android:textColor="@color/colorFontMain"
        android:padding="15dp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/dice_images_layout_2"
        android:orientation="horizontal"
        android:layout_gravity="center">
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/dice_images_layout_4"
        android:orientation="horizontal"
        android:layout_gravity="center">
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/dice_images_layout_6"
        android:orientation="horizontal"
        android:layout_gravity="center">
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/dice_images_layout_8"
        android:orientation="horizontal"
        android:layout_gravity="center">
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/dice_images_layout_10"
        android:orientation="horizontal"
        android:layout_gravity="center">
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/dice_images_layout_12"
        android:orientation="horizontal"
        android:layout_gravity="center">
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/dice_images_layout_20"
        android:orientation="horizontal"
        android:layout_gravity="center">
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_score_title"
        android:fontFamily="@font/press_start_2p"
        android:textColor="@color/colorFontMain"
        android:textSize="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="30"
            android:textSize="15dp"
            android:fontFamily="@font/press_start_2p"
            android:textColor="@color/colorFontMain"
            android:id="@+id/total_score_val"/>
        </LinearLayout>


</LinearLayout>